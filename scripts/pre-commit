#!/bin/sh
#
# Pre-commit hook: Pint (PHP style), model/seeder and docs checks.
# Install: cp scripts/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit
#

set -e
ROOT="$(git rev-parse --show-toplevel)"
cd "$ROOT"

# 1. Rector (fixes e.g. final on anonymous class before Pint can parse)
HAD_STASH=0
if ! git diff --quiet 2>/dev/null; then
    git stash push --keep-index -m "pre-commit" -q 2>/dev/null && HAD_STASH=1 || true
fi
php vendor/bin/rector process --no-progress-bar 2>/dev/null || true
for f in $(git diff --name-only); do [ -n "$f" ] && git add "$f"; done
[ "$HAD_STASH" = 1 ] && git stash pop -q 2>/dev/null || true

# 2. Laravel Pint (PHP code style)
echo "üìù Running Pint..."
if ! vendor/bin/pint --test --dirty 2>/dev/null; then
    echo "‚ùå Pint check failed. Run: vendor/bin/pint --dirty --format agent"
    exit 1
fi
echo "‚úÖ Pint passed"

# 3. New models: seeders and specs (exclude Concerns/ traits, Scopes/, and known non-models)
STAGED_MODELS=$(git diff --cached --name-only --diff-filter=A | grep -E '^app/Models/.*\.php$' | grep -v -E '^app/Models/(Concerns|Scopes)/' || true)
SKIP_NAMES="BelongsToOrganization OrganizationScope Categorizable TermsVersion UserTermsAcceptance"

if [ -n "$STAGED_MODELS" ]; then
    MISSING_SEEDERS=""
    MISSING_SPECS=""
    for MODEL_FILE in $STAGED_MODELS; do
        MODEL_NAME=$(basename "$MODEL_FILE" .php)
        case " $SKIP_NAMES " in *" $MODEL_NAME "*) continue ;; esac
        SEEDER_FOUND=false
        for CATEGORY in essential development production; do
            if [ -f "database/seeders/$CATEGORY/${MODEL_NAME}Seeder.php" ]; then
                SEEDER_FOUND=true
                break
            fi
        done
        if [ "$SEEDER_FOUND" = false ]; then
            MISSING_SEEDERS="${MISSING_SEEDERS}${MISSING_SEEDERS:+, }$MODEL_NAME"
        fi
        if [ ! -f "database/seeders/specs/${MODEL_NAME}.json" ]; then
            MISSING_SPECS="${MISSING_SPECS}${MISSING_SPECS:+, }$MODEL_NAME"
        fi
    done

    if [ -n "$MISSING_SEEDERS" ] || [ -n "$MISSING_SPECS" ]; then
        echo "‚ùå Pre-commit validation failed!"
        [ -n "$MISSING_SEEDERS" ] && echo "Missing seeders: $MISSING_SEEDERS"
        [ -n "$MISSING_SPECS" ] && echo "Missing specs: $MISSING_SPECS"
        echo "Fix: php artisan make:model:full <Model> --category=development"
        echo "Or skip: git commit --no-verify"
        exit 1
    fi
fi

# 4. Documentation
echo "üìö Checking documentation..."
if ! php artisan docs:sync --check >/dev/null 2>&1; then
    echo "‚ö†Ô∏è  Documentation incomplete. Run: php artisan docs:sync --check"
    echo "Skip with: git commit --no-verify"
    exit 1
fi
echo "‚úÖ Docs OK"

exit 0
